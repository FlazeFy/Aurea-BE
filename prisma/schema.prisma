generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum Gender {
  male
  female
}

enum DayName {
  sun
  mon
  tue
  wed
  thu
  fri
  sat
}

enum Time {
  morning
  afternoon
  night 
}

model dictionary {
  id              String   @id @db.Char(36)
  dictionary_name String   @unique @db.Char(36)
  dictionary_type String   @db.Char(36)
  // Metadata
  created_at      DateTime @default(now())
}

model admin {
  id                String    @id @db.Char(36)
  username          String    @db.Char(36)
  password          String    @db.VarChar(500)
  email             String    @unique @db.VarChar(255)
  telegram_user_id  String?   @unique @db.VarChar(10)
  telegram_is_valid Boolean   @default(false)
  // Metadata
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt
}

model user {
  id                String    @id @db.Char(36)
  username          String    @db.Char(36)
  password          String    @db.VarChar(500)
  email             String    @unique @db.VarChar(255)
  telegram_user_id  String?   @unique @db.VarChar(10)
  telegram_is_valid Boolean   @default(false)
  bio               String?   @db.VarChar(500)
  profile_image     String?   @db.Text
  born_at           DateTime? @db.Date
  gender            Gender
  // Metadata
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  // Relations
  histories     history[]
  allergics     allergic[]
  care_products care_product[] 
  google_tokens google_token[]
  feedbacks     feedback[]
  comments      comment[]
  likes         like[]
  inventories   inventory[]
}

model history {
  id              String   @id @db.Char(36)
  history_type    String   @db.Char(36)
  history_context String   @db.Char(36)
  // Metadata
  created_by      String?  @db.Char(36)
  created_at      DateTime @default(now())

  // Relation
  user user? @relation(fields: [created_by], references: [id])
}

model allergic {
  id               String   @id @db.Char(36)
  allergic_context String   @db.Char(36)
  allergic_desc    String?  @db.VarChar(255)
  // Metadata
  created_by       String   @db.Char(36)
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  // Relation
  user user @relation(fields: [created_by], references: [id])
}

model google_token {
  id            String   @id @db.Char(36)
  access_token  String   @db.Text
  refresh_token String   @db.Text
  expiry        DateTime
  // Metadata
  created_by    String   @db.Char(36)

  // Relation
  user user @relation(fields: [created_by], references: [id])
}

model care_product {
  id                String   @id @db.Char(36)
  product_name      String   @db.VarChar(255)
  brand             String   @db.VarChar(100)
  product_category  String   @db.Char(36)
  product_type      String   @db.Char(36)
  ingredients       Json?    
  key_ingredients   Json?   
  alcohol_free      Boolean  @default(false)
  fragrance_free    Boolean  @default(false)
  paraben_free      Boolean  @default(false)
  recommended_for   String?  @db.VarChar(255)
  suitable_skin     String?  @db.VarChar(100)
  usage_instruction String?  @db.Text
  is_active         Boolean  @default(true)
  // Metadata
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt
  created_by        String?  @db.Char(36)

  // Relations
  creator user? @relation(fields: [created_by], references: [id])

  inventories inventory[]
  comments    comment[]
  likes       like[]
}

model inventory {
  id              String   @id @db.Char(36)
  care_product_id String   @db.Char(36)
  qty             Int
  inventory_note  String?  @db.VarChar(255)
  // Metadata
  created_at      DateTime @default(now())
  created_by      String   @db.Char(36)

  // Relations
  user         user         @relation(fields: [created_by], references: [id])
  care_product care_product @relation(fields: [care_product_id], references: [id])

  used_schedules used_schedule[]
}

model used_schedule {
  id              String  @id @db.Char(36)
  inventory_id    String  @db.Char(36)
  day_name        DayName
  time            Time
  schedule_note   String? @db.VarChar(255)
  // Metadata
  created_at      DateTime @default(now())

  // Relations
  inventory inventory @relation(fields: [inventory_id], references: [id])

  schedule_marks schedule_mark[]
}

model schedule_mark {
  id                String  @id @db.Char(36)
  used_schedule_id  String  @db.Char(36)
  // Metadata
  created_at        DateTime @default(now())

  // Relations
  used_schedule used_schedule @relation(fields: [used_schedule_id], references: [id])
}

// Note : Feedback for apps
model feedback {
  id            String   @id @db.Char(36)
  feedback_rate Int
  feedback_note String   @db.Char(255)
  // Metadata
  created_by    String   @db.Char(36)
  created_at    DateTime @default(now())

  // Relation
  user user? @relation(fields: [created_by], references: [id])
}

model comment {
  id              String   @id @db.Char(36)
  care_product_id String   @db.Char(36)
  comment_body    String   @db.VarChar(500)
  // Metadata
  created_by      String   @db.Char(36)
  created_at      DateTime @default(now())

  // Relation
  care_product_comment care_product @relation(fields: [care_product_id], references: [id])
  user                 user?        @relation(fields: [created_by], references: [id])
}

model like {
  id              String   @id @db.Char(36)
  care_product_id String   @db.Char(36)
  // Metadata
  created_by      String   @db.Char(36)
  created_at      DateTime @default(now())

  // Relations
  care_product care_product @relation(fields: [care_product_id], references: [id])
  user         user         @relation(fields: [created_by], references: [id])

  @@unique([care_product_id, created_by])
}
